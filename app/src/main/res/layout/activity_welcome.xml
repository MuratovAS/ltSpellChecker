<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".WelcomeActivity">

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Welcome Text -->
            <TextView
                android:id="@+id/textViewWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />

            <!-- Installation Title -->
            <TextView
                android:id="@+id/textViewInstallTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/installation_title"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="@color/primaryColor"
                android:textStyle="bold" />

            <!-- Steps -->
            <TextView
                android:id="@+id/textViewSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/install_steps"
                android:textAppearance="?attr/textAppearanceBody2" />

            <!-- Limitations Title -->
            <TextView
                android:id="@+id/textViewLimitationsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/limitations_title"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="@color/primaryColor"
                android:textStyle="bold" />

            <!-- Limitations -->
            <TextView
                android:id="@+id/textViewLimitations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/app_limitations"
                android:textAppearance="?attr/textAppearanceBody2" />

            <!-- Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/button_settings"
                android:layout_gravity="center_horizontal" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/button_close"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
